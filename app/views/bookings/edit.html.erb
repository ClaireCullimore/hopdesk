<div class="container">
    <div class="form-container">
    <h2>Edit your Booking</h2>
    <h3><%= @booking.workspace.name %></h3>
    <h3><%= @booking.workspace.postcode %></h3>
    <%= simple_form_for [@workspace, @booking] do |f| %>
      <%= f.input :person_count %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.submit class: "btn btn-info"%>
      <% end %>
  </br>
    <%= link_to 'Back',  user_path(current_user), class: "btn btn-info" %>
    <%=link_to workspace_path, method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" } do %>
      <i class="far fa-trash-alt"></i>
      <% end %>
  </div>
</div>


