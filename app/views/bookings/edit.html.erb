<div class="container">
    <div class="form-container">
    <h2>Edit your Booking</h2>
    <h3><%= @booking.workspace.name %></h3>
    <h4><%= @booking.workspace.first_address_line %> <%= @booking.workspace.postcode %></h4>
    <%= simple_form_for [@workspace, @booking] do |f| %>
      <%= f.input :person_count %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
    </br>
    <div class="top-button">
      <%= f.submit class: "btn-edit-workspace btn btn-info"%>
    </div>
      <% end %>
    <div class="bottom-button">
        <%= link_to 'Back',  user_path(current_user), class: "btn-edit-back btn btn-info" %>
        <div>
          <%=link_to workspace_path, method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" } do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
  </div>
</div>
