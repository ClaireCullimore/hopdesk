<div class="container">
  <div class="edit">
    <h2>Edit your hopdesk space</h2>
    <p>Update the details of your space!</p>
    <%= simple_form_for @workspace do |f| %>
      <%= f.input :name %>
      <%= f.input :postcode %>
      <%= f.input :capacity %>
      <%= f.input :prices %>
      <%= f.input :description %>
      <%= f.association :amenities, collection: Amenity.all, as: :check_boxes, wrapper: :vertical_collection_inline %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }%>
      </br>
      <%= f.button :submit, class: "btn btn-success" %>
    <% end %>

</br>

  <%= link_to 'Back', workspaces_path, class: "btn btn-outline-success"%>
  </div>
</div>
