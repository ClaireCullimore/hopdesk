<div class="container">
  <div class="form-container">
    <div class="large-card-new">
      <h2>Add a hopdesk space</h2>
      <p>Invite people to work in your empty spaces and earn some extra income!</p>
      <%= simple_form_for @workspace do |f| %>
        <%= f.input :name %>
      <div class="form-row">
        <div class="col">
          <%= f.input :capacity %>
        </div>
        <div>
          <%= f.input :prices %>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <%= f.input :first_address_line %>
        </div>
        <div class="col-md-4">
          <%= f.input :city %>
        </div>
        <div class="col-md-2">
          <%= f.input :postcode %>
        </div>
      </div>
        <%= f.input :description %>
        <%= f.association :amenities,
                          collection: Amenity.all, as: :check_boxes,
                          wrapper: :vertical_collection_inline,
                          input_html: { class: "tag-selector" },
                          item_wrapper_class: 'tag-item'%>
        <%= f.input :photos, as: :file, input_html: { multiple: true }%>
        </br>
        <div class="top-button">
          <%= f.button :submit, class: "btn-edit-workspace btn btn-info" %>
        </div>
        <div class="bottom-button">
          <%= link_to 'Back', workspaces_path, class: "btn-edit-back btn btn-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
