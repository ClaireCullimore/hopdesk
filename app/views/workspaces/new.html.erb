<div class="large-card-new">
    <h2>Add a hopdesk space</h2>
    <p>Invite people to work in your empty spaces and earn some extra income!</p>
    <%= simple_form_for @workspace do |f| %>
      <%= f.input :name %>
      <%= f.input :first_address_line %>
      <%= f.input :postcode %>
      <%= f.input :capacity %>
      <%= f.input :prices %>
      <%= f.input :description %>
      <%= f.association :amenities, collection: Amenity.all, as: :check_boxes, wrapper: :vertical_collection_inline %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }%>
      </br>
      <%= f.button :submit, class: "btn btn-info" %>
    <% end %>

</br>

  <%= link_to 'Back', workspaces_path, class: "btn btn-outline-info"%>
</div>
