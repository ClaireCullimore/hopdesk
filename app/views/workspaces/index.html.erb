
<div class="workspaces">
  <div class="workspaces-leftside">
    <div class="col-3 left-index">
      <div class="filter mb-2">
      <%= form_tag workspaces_path, method: :get do %>
      <%= select_tag "workspaces", options_for_select(Workspace.pluck(:amenities), "wifi") %>
      <%= hidden_field_tag "query", params[:query]%>
      <%= submit_tag "Search", class: "btn btn-info" %>
      <% end %>
    </div>

    <div class="workspaces-cards">
      <% @workspaces.each do |workspace| %>
      <%= link_to workspace_path(workspace), class: "workspace-link" do %>
      <div class="workspace-card">
        <% if workspace.photos.attached? %>
          <%= cl_image_tag workspace.photos.first.key, class: "img" %>
        <% else %>
          <img class="card-image-workspace" src="https://images.unsplash.com/flagged/photo-1572392640988-ba48d1a74457?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="painting">
        <% end %>
        <div class="product-cards">
          <h2 class="workspace-card-name"> <%= workspace.name %></h2>
          <div class="card-icons">
            <img src="https://img.icons8.com/wired/64/000000/wifi-logo.png"/>
            <img src="https://img.icons8.com/wired/64/000000/tea.png"/>
            <img src="https://img.icons8.com/dotty/80/000000/clean-hands.png"/>
          </div>
          <div class="icon-postcode">
            <i class="fas fa-thumbtack"></i>
            <p> <%= workspace.postcode %></p>
            <p> <%= workspace.first_address_line %><p>
          </div>
        </div>
      </div>
        <% end %>
        <% end %>
    </div>
  </div>

   <div class="workspaces-rightside">
   <div id="map"
     style="width: 100%; height: 100vh"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
 </div>
</div>

