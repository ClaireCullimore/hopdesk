<div class="container" style="height: 100vh">
  <div class="heading-user">
    <h2>My Bookings</h2>
  </div>
  <% @bookings.each do |booking| %>
    <div class="bookings">
      <div class="qr">
        <%= @svg.html_safe %>
      </div>
      <div class="my-booking">
       <h3><%= booking.workspace.name %>:</h3>
       <p><%= booking.start_time.strftime('%a %e %B %l:%M')%> -
        <%= booking.end_time.strftime('%a %e %B %l:%M')%></p>

        <p>For <%= booking.person_count %> people</p>
        <p><%= number_to_currency((booking.end_time - booking.start_time) / 3600 * booking.workspace.prices * booking.person_count, unit: :Â£) %> to pay at venue </p>
       <p><%= link_to "Get in touch with the venue", 'https://wa.me/447783394206', target: "_blank" %></p>
      </div>
        <%= link_to 'See Workspace', edit_workspace_booking_path(booking.workspace, booking), class: "btn-edit-back btn btn-info btn-sm booking-edit-link" %>
        <%= link_to 'Edit Booking', edit_workspace_booking_path(booking.workspace, booking), class: "btn-edit-back btn btn-info btn-sm booking-edit-link" %>
        <%= link_to 'Leave a Review', new_workspace_review_path(booking.workspace), class: "btn-booking btn btn-info btn-sm booking-edit-link" %>
   </div>
  <% end %>
</div>
<style>

  .bookings {
    background: #FFF;
    border-radius: 6px;
    margin-bottom: 12px;
    width: 100%;
    height: 250px;
    border: solid 1px #E1E4E8;
  }

  .bookings a {
    text-decoration: none;
  }

  .booking-edit-link {
    margin-right: 12px;
  }

  .heading {
    margin: 24px;
    font-size: 64px !important;
    font-weight: bolder;
  }

  .qr {
    margin: auto;
  }

  .svg {
    margin-left: 15px;
  }

  .btn-booking {
    font-size: 12px;
  }

</style>
