    <h2>Find your Local Workspace</h2>
      <div class="index-form form-inline justify-content-center m-3">
        <%= form_tag workspaces_path, :method => "get" do %>
        <%= text_field_tag :search_city, params[:search_city], class: "form-control rounded-left", placeholder: "South East London" %>
        <%= text_field_tag :search_distance, params[:search_distance], class: "form-control", placeholder: "Within 5 km" %>
        <%= submit_tag "Search", class: "search-button"  %>
    <% end %>
</div>

