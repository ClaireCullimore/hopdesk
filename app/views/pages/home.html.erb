      <div class="carousel-item">
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1533264701333-1ebf1dacc05d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1651&q=80" alt="Second slide">
      </div>
    </div>
  </div>
  <div class="home-text-container">
    <div class= "home-text">
      <h2>Find your Local Workspace</h2>
      <div class="index-form form-inline justify-content-center">
        <div class="search-form">
          <%= simple_form_for :index_search, url: workspaces_path, method: :get do |f| %>
            <div class="form-line">
              <%= f.input :search_city, class: "form-control rounded-left", placeholder: "Area or Postcode", label: false %>
              <%= f.input :search_distance, class: "form-control", placeholder: "Km radius", label: false  %>
             <%= f.submit "Search", class: "btn btn-info"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
